      <!-- Three -->


      <section id="" class="flight_details">
        <% @flights.each do |flight| %>

        <article class="post">
          <header>
            <div class="title mapContainer">
              <p class="icon fa-home">From: <%= flight.departure %></p>
              <h3 class="icon fa-plane">To: <%= flight.destination %> </h3>
              <div class="4u$ 12u$(small)">
                <%= image_tag "http://maps.google.com/maps/api/staticmap?size=400x250&sensor=false&zoom=4&markers=#{flight.latitude}%2C#{flight.longitude}", class:"map" %>
              </div> 
            </div>
            <div class="meta">
              <p class="published icon fa-calendar"> <%= Flight.day(flight.date) %></p>
              <p class=" icon fa-clock-o"> <%= Flight.time(flight.date) %></p>
              <a href="#" class="author">
                <span class="name">
                  <%= flight.user.first_name %>
                </span>
              </a> 
              <p class="author">
                <span class="">
                  <%= image_tag(flight.user.avatar) %>
                </p> 
              </div>
            </header>
            <footer>
              <ul class="actions">
                <% if flight.user != current_user %>
                <p><%= flight.content %></p> 

                <li>
                  <%= button_to "Contact #{flight.user.first_name}", { action: "create",method: :post, controller: 'conversations', class: 'icon fa-envelope',sender_id: current_user.id, recipient_id: flight.user.id} %>
                </li>

                <% else %>

                <li>
                  <%= button_to 'Edit',edit_flight_path(flight),  method: :get, class: "button icon fa-envelope" %>
                </li>

                <% end %>


                <li>
                  <%= button_to "Share Flight On Facebook",
                  "https://www.facebook.com/dialog/feed?app_id=1051690404882304
                  &redirect_uri=https://www.facebook.com
                  &link=https://www.apostell.com/
                  &picture=http://maps.google.com/maps/api/staticmap?size=400x250&sensor=false&zoom=4&markers=#{flight.latitude}%2C#{flight.longitude}
                  &description=Check%20out%20my%20upcoming%20flight%20from%20#{flight.departure}%20to%20#{flight.destination}%20on%20apostell.com%20for%20help%20with%20delivering%20a%20package,
                  &caption=My%20flight%20to%20#{flight.destination}",
                  form: {target: '_blank'} %>
                  
              </li>
              </ul>
              </ul>
              <ul class="stats">
                <!-- <li><a href="#">General</a></li> -->
                <!-- <li><a href="#" class="icon fa-star fa-2x">28</a></li> -->
                <!-- <li><a href="#" class="icon fa-comment">128</a></li> -->
              </ul>
            </footer>
          </article>

        </section>
        <% end %>

        
        <% if @flights.present? %>

      <div class="flickr_pagination">
        <div class="page_info">
          <%= page_entries_info @flights %>
        </div>
        <%= will_paginate @flights, :container => false %>
      </div>
        <% end %>

