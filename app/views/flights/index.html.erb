
<div id="main">
  <section id="intro">
    <!-- <a href="#" class="logo"><img src="images/logo.jpg" alt="" /></a> -->

    <% if @flights.present? %>   
    <header>
      <center>
        <h2>Trips</h2>         
        <p>Below is the list of your friends' upcoming trips.</p>
      </center>
    </header>

    <header class="filter_field">
      <center>
        <%= form_tag flights_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search], id: 'flights_search',placeholder: "Search requests by city of departure or destination" %><br>
        <%= submit_tag "Search", :name => nil %>

      </center>
    </header>
    <% end %>

    <% elsif !@search.present?%>
    <header>
      <center>
        <h2>Trips</h2>     

    <header class="filter_field">
      <center>
        <%= form_tag flights_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search], id: 'flights_search',placeholder: "Search requests by city of departure or destination" %><br>
        <%= submit_tag "Search", :name => nil %>

      </center>
    </header>
        <% end %>
        <br>
        <br>
        <h3>Welcome to the Flights Feed.<br> Friends with upcoming trips will show up here. </h3>    
      </center>
    </header>


    <% else %>
    <header>
      <center>
        <h2>Trips</h2>  

        <header class="filter_field">
          <center>
            <%= form_tag flights_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], id: 'flights_search',placeholder: "Search requests by city of departure or destination" %><br>
            <%= submit_tag "Search", :name => nil %>

          </center>
        </header>
        <% end %>
        <br>
        <br>
        <h3>Sorry! No Trips Found for "<%= @search %>"! <br>Try Modifying Your Search</h3>
      </center>
    </header>

    <% end %>
  </section>
  <%= render 'flights/flights_feed' %>

</div>

<br />

