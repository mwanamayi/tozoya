        <header>
          <center>
            <h2>My Requests</h2>
            <% if @requests.present? %>            
            <p>Your personal upcoming Requests</p>
            <% else %>
            <br>
            <br>
            <h3>You do not currently have any upcoming requests. <br>Create one and it'll show up below
            </h3>
            <% end %>
            <p>
              <%= link_to 'Add A New Request', new_request_path, class: "button big" %>
            </p>
          </center>
        </header>
        <%= render 'requests/requests_feed' %>

      </section>
    </div>

