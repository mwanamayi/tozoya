<%= stylesheet_link_tag "landing_page2" %>
<%= javascript_include_tag 'landing_page2' %>


  <body class="landing">

    <!-- Page Wrapper -->
      <div id="page-wrapper">
          <header id="header" class="alt">
            <h1><a href="index.html">Apostell</a></h1>
          </header>

        <!-- Banner -->
          <section id="banner">
            <div class="inner">
              <h2>APOSTELL</h2>
              <p>One Community.
              One Million Shipping Destinations.<br />

        <ul class="actions">
          <li><%= button_to "Login With Facebook", user_omniauth_authorize_path(:facebook), class:"button special icon fa-facebook" %></li>
        </ul>
<!-- 
        <ul class="actions">
          <li><a href="/users/sign_in" class="button">Sign In Through Apostell</a></li>
        </ul>

        <ul class="actions">
          <li><a href="/users/sign_up" class="button">Sign Me Up!</a></li>
        </ul> -->

          </div>
            <a href="#one" class="more scrolly">How It Works</a>
          </section>

        <!-- One -->
         <section id="one" class="wrapper style1 special">
            <div class="inner">
                <h2>How It Works</h2>
            </div>
          </section>
 
        <!-- Two -->
          <section id="one" class="wrapper alt style2">
            <section class="spotlight">
              <div class="image"><%= image_tag("ship.jpeg") %></div>
              <div class="content">
                <h2>Shipping Something?</h2>
                <p>Need to send something across the globe but want to avoid high shipping fees?<br>
                  Want to ship something to a destination where shipping is non-existent?</p>
              </div>
            </section>
            <section class="spotlight">
              <div class="image"><%= image_tag("friends.jpeg") %></div><div class="content">
                <h2>Find travelling friends</h2>
                <p>Friends, or friends of friends are constantly travelling and maybe even some probably heading your way.</p>
              </div>
            </section>
            <section class="spotlight">
              <div class="image"><%= image_tag("contact.jpeg") %></div><div class="content">
                <h2>Connect</h2>
                <p>Get in touch with them and make arrangements to get your package delivered to where it needs to be.</p>
              </div>
            </section>
          </section>

        <!-- CTA -->
          <section id="cta" class="wrapper style4">
            <div class="inner">
              <header>
                <h2>Sounds Interesting?</h2>
                <p>With us, there's no sign up hassle needed. We use your pre-existing Facebook credentials.</p>
              </header>
              <ul class="actions vertical">
                <li><a href="#" class="button special">Login With Facebook</a></li>
              </ul>
            </div>
          </section>

        <!-- Footer -->
          <footer id="footer">
            <ul class="icons">
              <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
              <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
            </ul>
            <ul class="copyright">
              <li>&copy; Apostell</li>
            </ul>
          </footer>

      </div>


  </body>
  <% elsif not user_signed_in? %>
  <%= stylesheet_link_tag "landing_page2" %>
  <%= javascript_include_tag 'landing_page2' %>
  <%= yield %>

  <% else %>
